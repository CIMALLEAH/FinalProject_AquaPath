<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_grey"
    android:fillViewport="true"
    tools:context=".OceanHomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- ... Hero Section remains the same ... -->
        <FrameLayout
            android:id="@+id/heroSection"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/deep_blue"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wave"
                android:scaleType="centerCrop"
                android:alpha="0.3"
                android:contentDescription="@string/wave_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hero_title"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="Small Steps,\nBig Waves."/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/hero_subtitle"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"
                    tools:text="Join the movement to protect our oceans ðŸŒŠ"/>
            </LinearLayout>
        </FrameLayout>


        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="16dp"
            android:layout_marginTop="-40dp"
            app:layout_constraintTop_toBottomOf="@id/heroSection">

            <!-- Stat 1: Volunteers -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- FIX: Added ID for Volunteers TextView -->
                    <TextView
                        android:id="@+id/tvVolunteers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2,847"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_accent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_volunteers"
                        android:textSize="12sp"
                        android:textColor="@color/text_dark"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stat 2: Trash -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- FIX: Added ID for Trash TextView -->
                    <TextView
                        android:id="@+id/tvTrash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15,629"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_accent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_trash_gone"
                        android:textSize="12sp"
                        android:textColor="@color/text_dark"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stat 3: Donations / Projects -->
            <!-- NOTE: Your XML had Donations but your code animated Projects. I'll add both IDs for flexibility. -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- FIX: Added IDs for Donations and Projects TextViews -->
                    <!-- You can use whichever one matches your final design -->
                    <TextView
                        android:id="@+id/tvDonations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="$127K"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_accent"/>
                    <TextView
                        android:id="@+id/tvProjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_raised"
                        android:textSize="12sp"
                        android:textColor="@color/text_dark"
                        tools:text="Raised"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/statsContainer">

            <!-- FIX: Added ID for Volunteer button -->
            <Button
                android:id="@+id/btnVolunteer"
                android:text="@string/button_volunteer"
                android:backgroundTint="@color/teal_accent"
                android:textColor="@color/white"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- FIX: Added ID for Join Event button -->
            <Button
                android:id="@+id/btnJoinEvent"
                android:text="@string/button_join_event"
                android:backgroundTint="@color/deep_blue"
                android:textColor="@color/white"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ... Featured Story and Donate section remains the same, but I'll add an ID to the final donate button ... -->

        <TextView
            android:id="@+id/tvFeatured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/featured_story"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/deep_blue"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/actionsContainer"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/featuredCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvFeatured">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/sand"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/coral_story_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:text="@string/coral_story_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_height="16dp"
                        android:layout_width="18dp"/>
                    <TextView
                        android:text="@string/coral_story_description"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#546E7A"
                        android:layout_height="16dp"
                        android:layout_width="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:background="#E0F7FA"
            app:layout_constraintTop_toBottomOf="@id/featuredCard">

            <TextView
                android:text="@string/donate_prompt"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/deep_blue"
                android:layout_height="16dp"
                android:layout_width="18dp"/>

            <!-- FIX: Added ID for Donate button -->
            <Button
                android:id="@+id/btnDonate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_donate"
                android:backgroundTint="@color/sea_green"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
