<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_grey"
    tools:context=".OceanHomeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"> <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/ocean_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvProfileInitials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="AP"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/cvProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cvProfile"
                app:layout_constraintBottom_toBottomOf="@id/cvProfile">

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textColor="@color/gray_dark"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/heroSection"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@color/deep_blue"
                app:layout_constraintTop_toBottomOf="@id/profileHeader">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/wave"
                    android:scaleType="centerCrop"
                    android:alpha="0.3"
                    android:contentDescription="@string/wave_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hero_title"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/hero_subtitle"
                        android:textColor="#E0E0E0"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/statsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="16dp"
                android:layout_marginTop="-40dp"
                app:layout_constraintTop_toBottomOf="@id/heroSection">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvVolunteers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2,847"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_accent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stat_volunteers"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvTrash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="15,629"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_accent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stat_trash_gone"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvDonations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="$127K"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_accent"/>
                        <TextView
                            android:id="@+id/tvProjects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stat_raised"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                app:layout_constraintTop_toBottomOf="@id/statsContainer">

                <Button
                    android:id="@+id/btnVolunteer"
                    android:text="@string/button_volunteer"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/teal_accent"
                    android:textColor="@color/white"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnJoinEvent"
                    android:text="@string/button_join_event"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/deep_blue"
                    android:textColor="@color/white"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvFeatured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/featured_story"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/actionsContainer"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/featuredCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvFeatured">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/coral"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/coral_story_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:text="@string/coral_story_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <TextView
                            android:text="@string/coral_story_description"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#546E7A"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="#E0F7FA"
                app:layout_constraintTop_toBottomOf="@id/featuredCard">

                <TextView
                    android:text="@string/donate_prompt"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/deep_blue"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <Button
                    android:id="@+id/btnDonate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_donate"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/sea_green"
                    android:paddingHorizontal="32dp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Logout"
        android:src="@android:drawable/ic_lock_power_off"
        app:backgroundTint="#FFEBEE"
        app:tint="#D32F2F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
